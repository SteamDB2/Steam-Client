        {
            "name": "GetCheatingReports",
            "version": 1,
            "httpmethod": "GET",
            "parameters": [
                {
                    "name": "appid",
                    "type": "uint32",
                    "optional": false,
                    "description": "AppID of game"
                },
                {
                    "name": "timebegin",
                    "type": "uint32",
