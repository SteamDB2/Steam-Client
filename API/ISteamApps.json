            "version": 1,
            "httpmethod": "GET",
            "parameters": [
                {
                    "name": "filter",
                    "type": "string",
                    "optional": true,
                    "description": "Query filter string"
                },
                {
                    "name": "limit",
                    "type": "uint32",
                    "optional": true,
                    "description": "Limit number of servers in the response"
                }
            ]
        },
        {
            "name": "GetServersAtAddress",
            "version": 1,
            "httpmethod": "GET",
            "parameters": [
