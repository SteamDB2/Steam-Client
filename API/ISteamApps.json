                {
                    "name": "description",
                    "type": "string",
                    "optional": true,
                    "description": "optional description for this build"
                }
            ]
        },
        {
            "name": "UpToDateCheck",
            "version": 1,
            "httpmethod": "GET",
            "parameters": [
                {
                    "name": "appid",
                    "type": "uint32",
                    "optional": false,
                    "description": "AppID of game"
                },
                {
                    "name": "version",
                    "type": "uint32",
                    "optional": false,
