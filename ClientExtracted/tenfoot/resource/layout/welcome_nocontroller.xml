<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/backgroundvideopanel.css" />
		<include src="file://{resources}/styles/welcome_nocontroller.css" />
		<include src="file://{resources}/styles/tenfootcontroller_pairing.css"  /> 

	</styles>

	<Welcome_NoController class="Welcome_NoController" defaultfocus="DummyInput" tabindex="auto" selectionpos="auto">
		<Panel id="BackgroundMovie" class="WelcomeBackground"> 
				<Panel id="WelcomeNoControllerTurnOn"> 
					<Image class="ControllerImageBase" src="file://{images}/library/controller/cropped_controller_config_controller_i_blank.png" />
					<Image class="ControllerImageOverlay" id="ControllerImageNoController" src="file://{images}/library/controller/cropped_controller_config_controller_i_system.png" />
				</Panel>
			<Panel id="SteamControllerBasePanel"> 
					<Image class="ControllerImageBase" src="file://{images}/library/controller/cropped_controller_config_controller_i_blank.png" />
					<Image class="ControllerImageOverlay" id="ControllerImageA" src="file://{images}/library/controller/cropped_controller_config_controller_i_a.png" />
					<Image class="ControllerImageOverlay ControllerImageStickLeft" src="file://{images}/library/controller/cropped_controller_config_controller_s2.png" />
					<Image class="ControllerImageOverlay ControllerImageStickRight" src="file://{images}/library/controller/cropped_controller_config_controller_move_dn.png" />
			</Panel>
			<Panel id="GamepadBasePanel"> 
					<Image class="ControllerImageBase" src="file://{images}/library/controller/oobe_gamepad_blank.png" />
					<Image class="ControllerImageOverlay" id="ControllerImageA" src="file://{images}/library/controller/oobe_gamepad_btn_a.png" />
					<Image class="ControllerImageOverlay ControllerImageStickLeft" src="file://{images}/library/controller/oobe_gamepad_blank.png" />
					<Image class="ControllerImageOverlay ControllerImageStickRight" src="file://{images}/library/controller/oobe_gamepad_stick_dn.png" />
			</Panel>
			<Panel id="PairingBasePanel"> 
					<Image class="ControllerImageBase" src="file://{images}/library/controller/cropped_controller_config_controller_i_blank.png" />
					<Image class="ControllerImageOverlay PairingImageOverlay" id="ControllerImageNoController" src="file://{images}/library/controller/cropped_controller_config_controller_i_x_system.png" />
			</Panel>
			<TenfootControllerPairing id="VerificationPanel" class="VerificationVisible"></TenfootControllerPairing>
      <Button id="DummyInput" />
      <Label id="ControllerHowToPair" class="ControllerHowToPair" text="#Library_Details_Controller_HowToPair" />
		</Panel>
	</Welcome_NoController>
