<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/overlay/steamcontrollerhud.css" />
	</styles>
	
	<SteamControllerHUD>
		<Panel id="ImageRefCountKeeper" >
			<Image src="file://{images}/library/controller/hud/dpad_n.png" />
			<Image src="file://{images}/library/controller/hud/dpad_s.png" />
			<Image src="file://{images}/library/controller/hud/dpad_w.png" />
			<Image src="file://{images}/library/controller/hud/dpad_e.png" />
			<Image src="file://{images}/library/controller/hud/dpad_nw.png" />
			<Image src="file://{images}/library/controller/hud/dpad_ne.png" />
			<Image src="file://{images}/library/controller/hud/dpad_sw.png" />
			<Image src="file://{images}/library/controller/hud/dpad_se.png" />
			
			<Image src="file://{images}/library/controller/api/button_kb.png" />
		</Panel>

		<Panel id="KeyboardContainer" >
			<Panel id="KeyDownRow" >
				<Panel id="KeyDummy" />
			</Panel>
		</Panel>
		
		<Panel id="DPadBackground" >
			<Panel id="SquareDPadContainer" >
				<Panel id="SquareDPadNorthRow" class="SquareDPadRow" >
					<Panel id="SquareDPadNW"  class="SquareDPadSection" />
					<Panel id="SquareDPadN"  class="SquareDPadSection" />
					<Panel id="SquareDPadNE" class="SquareDPadSection" />
				</Panel>
				<Panel id="SquareDPadCenterRow" class="SquareDPadRow" >
					<Panel id="SquareDPadW"  class="SquareDPadSection" />
					<Panel id="SquareDPadCenter"  class="SquareDPadSection"/>
					<Panel id="SquareDPadE" class="SquareDPadSection" />
				</Panel>
				<Panel id="SquareDPadSouthRow" class="SquareDPadRow" >
					<Panel id="SquareDPadSW" class="SquareDPadSection" />
					<Panel id="SquareDPadS" class="SquareDPadSection" />
					<Panel id="SquareDPadSE" class="SquareDPadSection" />
				</Panel>
			</Panel>
			<Panel id="RadialDPadContainer">
				<Panel id="DPadContainer" />
				<Panel id="DPadDeadZone" />
			</Panel>
			<Panel id="DPadCrossHair" />
		</Panel>
		<Panel id="RightStickContainer" class="StickContainer" >
			<Panel id="RightStickCap" class="StickCap" />
		</Panel>
	</SteamControllerHUD>
</root>
