<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/friends/friends.css" />
		<include src="file://{resources}/styles/overlay/overlay.css" />
	</styles>


		
	<FirstTimeBroadcastPanel class="FirstTimeBroadcastPanel" >
		<Panel class="FirstTimeBroadcastFrame" tabindex="auto" selectionpos="auto" defaultfocus="FriendsApprove" >
			<!-- top header panel -->
			
			<Label class="StdTitle" text="#Broadcast_FirstTime_Title" />
			<Label class="StdLabelLarge" text="#Broadcast_FirstTime_Header" />
			
			<!-- <FriendsProfileDetailsCompositeHeader id="FriendsProfileDetailsCompositeHeader" /> -->
			
			<Label class="StdLabelLarge FirstTimeBroadcastSpacer" text="#Broadcast_FirstTime_PermissionHeader" />
							
			<!-- main panel -->
			<Panel id="BroadcastSettingsContainer" class="Radios FirstTimeBroadcastOptions" tabindex="auto" selectionpos="auto" defaultfocus="FriendsApprove" childfocusonhover="false">
					<RadioButton group="BroadcastSettings" class="Button RadioButton" tabindex="auto" id="Disabled" text="#Settings_Broadcast_Disabled" selectionpos="auto" />
					<RadioButton group="BroadcastSettings" class="Button RadioButton" tabindex="auto" id="FriendsApprove" text="#Settings_Broadcast_FriendsApprove" selectionpos="auto" />
					<RadioButton group="BroadcastSettings" class="Button RadioButton" tabindex="auto" id="FriendsAllowed" text="#Settings_Broadcast_FriendsAllowed" selectionpos="auto" />
					<RadioButton group="BroadcastSettings" class="Button RadioButton" tabindex="auto" id="Public" text="#Settings_Broadcast_FriendsPublic" selectionpos="auto"  />
			</Panel>
			

			
			<Button class="MsgBoxButtons Button FirstTimeBroadcastSpacer" tabindex="auto" selectionpos="auto" onactivate="FirstTimeBroadcastClose()" >
				<Label class="ButtonText" text="#Broadcast_FirstTime_OK" />
			</Button>
		</Panel>
	</FirstTimeBroadcastPanel>
	
</root>
