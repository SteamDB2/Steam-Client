<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/wizardstyles.css" />
		<include src="file://{resources}/styles/login/loginhelp.css" />
	</styles>

	<ForgotAccountNameTypeWizardChild class="WizardChild" tabindex="auto" selectionpos="auto" defaultfocus="ButtonNext">
		<Panel class="WizardContent">
		  <Label class="WizardChildDescription" text="#ForgotAccountName_Type_Description" />

		  <Panel id="RadioButtonContainer">
			  <Panel class="InputContainerDown GapDown">
				  <RadioButton group="TYPE" class="Button RadioButton" id="RadioEmail" tabindex="0.0" text="#ForgotAccountName_Type_Email" selectionpos="auto" />
			  </Panel>
			  <Panel class="InputContainerDown GapDown">
				  <RadioButton group="TYPE" class="Button RadioButton" id="RadioCDKey" tabindex="0.0" text="#ForgotAccountName_Type_CDKey" selectionpos="auto" />
			  </Panel>
		  </Panel>
    </Panel>

		<Panel id="WizardButtons" tabindex="auto" selectionpos="auto">
			<Button class="WizardButton GapRight" id="ButtonNext" onactivate="WizardButtonNext()">
				<Label id="Label" text="#WizardButton_Next" />
			</Button>
			<Button class="WizardButton GapRight" id="ButtonCancel" onactivate="WizardButtonCancel()">
				<Label id="Label" text="#WizardButton_Cancel" />
			</Button>
		</Panel>

	</ForgotAccountNameTypeWizardChild>

</root>
