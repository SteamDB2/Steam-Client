<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/broadcast/broadcast.css" />
		<include src="file://{resources}/styles/button.css" />
	</styles>

	<BroadcastRequest tabindex="auto" selectionpos="auto">
		
		<AvatarImage id="AvatarImage" />
		
		<Panel class="BroadcastRequestWrapper" >
			<Label id="MessageText" text="#Broadcast_Notification_Viewer_Request_Overlay" />
			<Panel class="BroadcastRequestCapsule" >
				<Button id="AcceptButton" onactivate="AcceptBroadcastWatchRequest()" >
					<Label text="#Broadcast_Notification_Accept_Request" /> 
				</Button>
				<Button id="IgnoreButton" onactivate="IgnoreBroadcastWatchRequest()" >
					<Label text="#Broadcast_Notification_Ignore_Request" /> 
				</Button>
			</Panel>
		</Panel>
	</BroadcastRequest>
</root>
