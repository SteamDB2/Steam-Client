<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css" />
		<include src="file://{resources}/styles/friends/friends.css" />
		<include src="file://{resources}/styles/friends/friendscontent_groupitem.css" />
	</styles>

	<FriendsContent_GroupItem onactivate="GroupItemActivated" selectionpos="auto" tabindex="auto" oncontextmenu="FriendsMainViewMore();">
		<Panel class="GroupContent">
			<AvatarImage id="Avatar" class="GroupAvatar" />		
			<Panel class="GroupItemLabelContainer">
				<Label text="#group_item_groupname" class="GroupItemName" />
				<Label text="#group_item_in_game" class="GroupInGame" />
				<Label text="#group_item_online" class="GroupOnline" />
				<Label text="#group_item_in_chat" class="GroupInChat" />
			</Panel>
		</Panel>
		<Label text="#group_item_unread" class="GroupItemUnread" />
		<!-- <FriendsIndicatorContainer id="Indicator" /> -->
	</FriendsContent_GroupItem>
</root>
