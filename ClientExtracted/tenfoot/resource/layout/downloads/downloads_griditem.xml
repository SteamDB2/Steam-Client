<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/downloads.css" />
	</styles>
	
	<DownloadsGridItem>
		<Panel id="AppButtonWrapper" >
			<Button id="AppButton" mousecanactivate="iffocused" onmouseactivate="DownloadsActivate()" >
				<Image id="Image" class="GridItemImage" src="file://{images}/library_default.tga" defaultsrc="file://{images}/library_default.tga" />
				<Panel class="DownloadNameAndPercent" >
					<Label id="Title" class="AppTitle" text="" />
					<Label id="PercentDownload" class="PercentDownload" text="#Downloads_Percent" />
				</Panel>
			</Button>
			<Panel class ="DownloadBarBackground">
				<Panel id ="DownloadBarPercent" class ="DownloadBarPercent" />
			</Panel>
		</Panel>
		<Panel class ="DownloadSpacer" />
		<Label id="DownloadFinishedLabel" text="#Downloads_Finished" />
		<Label id="DownloadDeferredLabel" text="#Downloads_Deferred" />
		<Panel class ="DownloadLabels" >
			<Panel class="DownloadLabelRow" >
				<Label text="#Downloads_Amount" />
				<Label text="#Downloads_CurrentRate2" />
				<Label text="#Downloads_PeakRate" />
				<Label id="TimeRemainHeader" text="#Downloads_TimeRemain" />
			</Panel>
			<Panel class="DownloadValuesRow" >
				<Label text="#Downloads_AmountValue" />
				<Label text="#Downloads_CurrentRateValue" />
				<Label text="#Downloads_PeakRateValue" />
				<Label text="#Downloads_TimeRemainValue" />
			</Panel>			
		</Panel>		
		<Panel class ="DownloadQueuedLabels" >
			<Panel class="DownloadLabelRow" >
				<Label text="#Downloads_QueuedAmount" />
			</Panel>
			<Panel class="DownloadValuesRow" >
				<Label text="#Downloads_QueuedAmountValue" />
			</Panel>			
		</Panel>			
	</DownloadsGridItem>
</root>
