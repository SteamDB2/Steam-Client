<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
		
	</styles>

	<SettingsPanel_Store class="SettingsSection" defaultfocus="Continents">
    <Panel class="SettingsBottomPanel">
		  <!-- main panel -->
		  <Panel class="SettingsContent" tabindex="auto" selectionpos="auto">

				<Panel class="VertContainer">	
					<Label class="PaddedLabel" text="#SettingsStore_Description1" />			
					<Label class="PaddedLabel" text="#SettingsStore_Description2" />			
					<Label class="PaddedLabel" text="#SettingsStore_Description3" />		
					<Panel class="VertContainer">
						<Panel id="LocalWindows" class="SettingsStore_Config">
							<Panel id="SettingsIcon_OSConfig_Win" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_OSConfig_Win" />
						</Panel>
						<Panel id="LocalOSX" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_OSConfig_OSX" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_OSConfig_OSX" />	
						</Panel>
						<Panel id="LocalLinux" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_OSConfig_Linux" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_OSConfig_Linux" />	
						</Panel>
						<Panel id="LocalSteamOS" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_OSConfig_SteamOS" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_OSConfig_SteamOS" />	
						</Panel>
						<Panel id="InputXInput" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_InputConfig_XInput" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_XInputConfig" />	
						</Panel>
						<Panel id="InputSteampad" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_InputConfig_Steampad" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_SteampadConfig" />	
						</Panel>
						<Panel id="InputKeyboard" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_InputConfig_Keyboard" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_KeyboardConfig" />	
						</Panel>
						<Panel id="StreamingWindows" class="SettingsStore_Config">
							<Panel id="SettingsIcon_OSConfig_Win" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_RemoteOSConfig_Win" />
						</Panel>
						<Panel id="StreamingOSX" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_OSConfig_OSX" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_RemoteOSConfig_OSX" />	
						</Panel>
						<Panel id="StreamingLinux" class="SettingsStore_Config">					
							<Panel id="SettingsIcon_OSConfig_Linux" class="SettingsIcon" /><Label class="ConfigLabel" text="#SettingsStore_RemoteOSConfig_Linux" />	
						</Panel>
					</Panel>	
					<Label class="PaddedLabel" text="#SettingsStore_Description4" />	
					<ToggleButton class="CheckBox" id="SettingsStore_FilterToggle" text="#SettingsStore_FilterToggle" onactivate="SettingsStore_FilterToggle();" />
				</Panel>
      </Panel>
		</Panel>
	</SettingsPanel_Store>

</root>
