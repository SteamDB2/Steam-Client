<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
		
	</styles>

	<SettingsPanel_ControllerConfigs class="SettingsSection" defaultfocus="ConfigDesktop">
    <Panel class="SettingsBottomPanel">
		  <!-- main panel -->
		  <Panel class="SettingsContent" tabindex="auto" selectionpos="auto">

				<Panel class="VertContainer">	
					<Label text="#SettingsControllerCfg_Intro" />


					<Panel class="SettingsContent">
						<Button id="ConfigDesktop" class="Button" selectionpos="auto" onactivate="OpenConfig( 413080 );">
							<Label class="LongDesc" text="#SettingsControllerCfg_ConfigDesktop" />
						</Button>
					</Panel>
					<Label class="PaddedLabel" text="#SettingsControllerCfg_DesktopNote" />
					
					<Panel class="SettingsContent">	
						<Button id="ConfigBigPicture" class="Button" selectionpos="auto" onactivate="OpenConfig( 413090 );">
							<Label class="LongDesc" text="#SettingsControllerCfg_ConfigBP" />
						</Button>
					</Panel>
				<Label class="PaddedLabel" text="#SettingsControllerCfg_BigPictureNote" />
					
					<Panel class="SettingsContent">	
						<Button id="ConfigGuideChord" class="Button" selectionpos="auto" onactivate="OpenConfig( 443510 );">
							<Label class="LongDesc" text="#SettingsControllerCfg_ConfigGuideChord" />
						</Button>
					</Panel>
					<Label class="PaddedLabel" text="#SettingsControllerCfg_ChordNote" />
										
				</Panel>
      </Panel>
		</Panel>
	</SettingsPanel_ControllerConfigs>

</root>
