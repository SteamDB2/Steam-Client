<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/wizardstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanelNetwork_IPCustomSettings class="WizardChild" tabindex="auto" selectionpos="auto">
		<Panel class="WizardContent">
		  <Label class="SettingsCallout LongDesc" text="#SettingsNetwork_Manual_Instructions" />

			  <Panel id="WrapperPanel" >
				  <Label class="SettingsLegend NetworkSettingsIPSettingsLegend" text="#SettingsNetwork_CustomIP" />
					  <TextEntry
						  id="SettingsNetwork_CustomIP"
						  class="WizardTextEntry"
						  textinputid="CustomIP"
						  textinputclass="HalfWidth DockRight AppearFromBottomCenter NoTouchPads">
						  <Label class="TextEntryPrompt SettingsNetwork_IPv4Format" text="#SettingsNetwork_IPv4_Format" />
					  </TextEntry>

				  <Label class="SettingsLegend NetworkSettingsIPSettingsLegend" text="#SettingsNetwork_CustomMask" />
					  <TextEntry
						  id="SettingsNetwork_CustomMask"
						  class="WizardTextEntry"
						  textinputid="CustomMask"
						  textinputclass="HalfWidth DockRight AppearFromBottomCenter NoTouchPads">
						  <Label class="TextEntryPrompt SettingsNetwork_IPv4Format" text="#SettingsNetwork_IPv4_Format" />
					  </TextEntry>

				  <Label class="SettingsLegend NetworkSettingsIPSettingsLegend" text="#SettingsNetwork_CustomGateway" />
					  <TextEntry
						  id="SettingsNetwork_CustomGateway"
						  class="WizardTextEntry"
						  textinputid="CustomGateway"
						  textinputclass="HalfWidth DockRight AppearFromBottomCenter NoTouchPads">
						  <Label class="TextEntryPrompt SettingsNetwork_IPv4Format" text="#SettingsNetwork_IPv4_Format" />
					  </TextEntry>

				  <Label class="SettingsLegend NetworkSettingsIPSettingsLegend" text="#SettingsNetwork_CustomPrimaryDNS" />
					  <TextEntry
						  id="SettingsNetwork_CustomPrimaryDNS"
						  class="WizardTextEntry"
						  textinputid="CustomPrimaryDNS"
						  textinputclass="HalfWidth DockRight AppearFromBottomCenter NoTouchPads">
						  <Label class="TextEntryPrompt SettingsNetwork_IPv4Format" text="#SettingsNetwork_IPv4_Format" />
					  </TextEntry>

				  <Label class="SettingsLegend NetworkSettingsIPSettingsLegend" text="#SettingsNetwork_CustomSecondaryDNS" />
					  <TextEntry
						  id="SettingsNetwork_CustomSecondaryDNS"
						  class="WizardTextEntry"
						  textinputid="CustomSecondaryDNS"
						  textinputclass="HalfWidth DockRight AppearFromBottomCenter NoTouchPads">
						  <Label class="TextEntryPrompt SettingsNetwork_IPv4Format" text="#SettingsNetwork_IPv4_Format" />
					  </TextEntry>

			  </Panel>
      </Panel>
		<Panel id="WizardButtons" tabindex="auto" selectionpos="auto">
			<Button class="WizardButton GapRight" id="ButtonNext" onactivate="WizardButtonNext()">
				<Label id="Label" text="#SettingsNetwork_Connect" />
			</Button>

			<Button class="WizardButton GapRight" id="ButtonBack" onactivate="WizardButtonBack()">
				<Label id="Label" text="#WizardButton_Back" />
			</Button>

			<Button class="WizardButton GapRight" id="ButtonCancel" onactivate="WizardButtonCancel()">
				<Label id="Label" text="#WizardButton_Cancel" />
			</Button>
		</Panel>

	</SettingsPanelNetwork_IPCustomSettings>

</root>
