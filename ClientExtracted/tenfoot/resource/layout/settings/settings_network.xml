<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanel_Network class="SettingsSection">
		<!-- main panel -->
		<Panel class="SettingsBottomPanel FlowDown" tabindex="auto" selectionpos="auto">
			<Panel class="SettingsContent" tabindex="auto" selectionpos="auto">
				<Panel id="WizardButtonsNetwork" tabindex="auto" selectionpos="auto">
					<Button class="Button" onactivate="NetworkWizardStart()">
						<Label class="LongDesc" text="#SettingsNetwork_ReconfigureNetwork" />
					</Button>
				</Panel>
			</Panel>

			<Panel id="SettingsNetwork_Unavailable" class="SettingsContent SettingsLeftContent">
				<Panel class="SettingsSubhead" tabindex="auto" selectionpos="auto">
					<Label class="SettingsCallout" text="#SettingsNetwork_Unavailable" />
				</Panel>
			</Panel>

			<Panel id="SettingsNetwork_Available" class="SettingsContent SettingsLeftContent">
				<Panel id="SettingsNetwork_WiFi_Enabled" tabindex="auto" selectionpos="auto">
					<Label class="SettingsLegend" text="#SettingsNetwork_WAP" />
					<Label class="SettingsValue" id="SettingsNetwork_WAP_Name" />

					<Label class="SettingsLegend" text="#SettingsNetwork_WAP_Strength" />
					<Panel class="StrengthWrapper">
						<Panel id="NetworkSignal" class="NetworkSignalBase" />
					</Panel>
				</Panel>
				<Panel id="SettingsNetwork_Wired_Enabled" tabindex="auto" selectionpos="auto">
					<Label class="SettingsLegend" text="#SettingsNetwork_wired" />
					<Label class="SettingsValue" id="SettingsNetwork_Device_NetworkJack_State" />
				</Panel>

				<Label class="SettingsLegend" text="#SettingsNetwork_IPAddress" />
				<Label class="SettingsValue" id="SettingsNetwork_IPAddress_List" />

				<Label class="SettingsLegend" text="#SettingsNetwork_SubnetMask" />
				<Label class="SettingsValue" id="SettingsNetwork_SubnetMask_List" />

				<Label class="SettingsLegend" text="#SettingsNetwork_RouterAddress" />
				<Label class="SettingsValue" id="SettingsNetwork_RouterAddress_List" />

				<Label class="SettingsLegend" text="#SettingsNetwork_DNSResolver" />
				<Label class="SettingsValue" id="SettingsNetwork_DNSResolver_List" />

				<Label class="SettingsLegend" text="#SettingsNetwork_MACAddress" />
				<Label class="SettingsValue" id="SettingsNetwork_MACAddress_List" />

			</Panel>
		</Panel>

	</SettingsPanel_Network>

</root>
