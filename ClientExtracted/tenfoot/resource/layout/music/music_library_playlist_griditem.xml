<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/music/music_library.css" />
	</styles>
	
	<ArtistGridItem max_image_src_width="220" max_image_src_height="220">
		<Image id="AlbumImage" class="AlbumImage" scaling="stretch-to-fit-y-preserve-aspect" />
		<Panel id="AlbumLabelWrapper">
			<Label id="AddLibraryText" text="#MusicPlaylist_Library_Add_Playlist" />
			<Label id="PlaylistUpperLabel" text="#Music_Playlist_Grid_ArtistName" />
			<Label id="PlaylistLowerLabel" text="{d:trackcount} Tracks, duration {s:totaltime}" />
		</Panel>
	</ArtistGridItem>
</root>
