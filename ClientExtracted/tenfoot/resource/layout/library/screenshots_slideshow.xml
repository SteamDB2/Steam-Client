<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/library/library_screenshots_slideshow.css" />
	</styles>
	
	<LibraryScreenshotsSlideshow>

		<SlideShow id="Contents" tabindex="auto"/>
		<Panel id="SlideShowGlow" />
		<Panel class="SlideShowOverlay" />
		<Panel id="SlideShowDescription" hittest="false">
			<Panel id="SlideShowTitle">
				<Label id="ScreenshotsTitle" text="#Library_ScreenshotsSlideshowTitle" />
				<Label id="ScreenshotsCaption" text="#Library_ScreenshotsCaption" />
			</Panel>
			<Panel id="SlideShowSubDescription">
				<Label id="ScreenshotsTitle2" text="#Library_ScreenshotsSlideshowSubTitle" />
				<Label id="ScreenshotsTime" text="#Library_ScreenshotTakenOn" />
				<Label id="ScreenshotUploaded" text="#Library_ScreenshotUploaded" />
			</Panel>
		</Panel>
	</LibraryScreenshotsSlideshow>
</root>
