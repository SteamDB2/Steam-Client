<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/library/controllerregistration.css" />
	</styles>
	<Panel tabindex="auto" class="TenfootMsgBox " selectionpos="auto" >
		<Panel id="MsgBoxBodyRegion" class="MsgBoxBodyRegion" oncancel="ButtonCancel()">
			<Panel id="MsgBoxHeader" class="MsgBoxHeader">
				<Panel>
					<Label class="MsgBoxTitle" text="#Controller_SetLEDColor_Title" />
					<Panel id="LightColorIconContainer">
					<Image id="LightColorIcon" src="file://{images}/library/icon_choosebinding_light_2.png" />
					</Panel>
				</Panel>
			</Panel>

			<Panel id="" class="HorizontalSpace" />
			<Label class="SubTitle" text="#Controller_SetLEDColor_Description" />
			<Panel id="" class="HorizontalSpace" />
			<Panel id="" class="SoundDropdownContainer">
				<Label text="#Controller_Light_Setting" />
				<DropDown id="SelectLEDSetting" class="SoundDropdown"/>
			</Panel>	
			<Panel id="LEDColorContainer">
				<Label text="#Controller_Registration_LEDHue" />
				<Slider id="LEDColorSlider" direction="horizontal" />
			</Panel>
			<Panel id="GuideBrightnessContainer">
				<Label text="#Controller_Registration_GuideBrightness" />
				<Slider id="GuideBrightnessSlider" direction="horizontal" />
			</Panel>
			<Panel id="LEDSaturationContainer">
				<Label text="#Controller_Registration_LEDSaturation" />
				<Slider id="LEDSaturationSlider" direction="horizontal" />
			</Panel>
			<Panel id="" class="HorizontalSpace" />
			<Panel id="MsgBoxButtons">
				<Button class="Button" onactivate="SelectControllerLEDColor();">
					<Label text="#UI_OK" />
				</Button>
				<Button class="Button" onactivate="ButtonCancel();">
					<Label text="#UI_Cancel" />
				</Button>
			</Panel>
		</Panel>
	</Panel>
</root>
