<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>
	
	<LibrarySuggestions class="LibrarySuggested" selectionpos="auto">
		<Panel class="EmptyLibraryHeader SuggestedRow">
			<Panel class="EmptyLibraryLabelWrapper">
				<Label class="Title" text="#Library_Suggested_Empty" />
				<Label text="#Library_Suggested_EmptyDetails" />
			</Panel>
		</Panel>
		<Panel class="FreeGamesList AppList" selectionpos="auto" >
			<Label class="HeaderLabel" text="#Library_Suggested_FreeGames_Header" />
			<Panel class="SuggestedRow" selectionpos="auto">
				<Button id="FreeGame0" class="FreeGame" onactivate="StoreShowApp(570);" selectionpos="auto" >
					<Image class="GridItemImage" src="file://{images}/library_default.tga" defaultsrc="file://{images}/library_default.tga" />
					<Panel class="FreeGameDetails">
						<Label text="XXXXX Current Players" />
					</Panel>
				</Button>
				<Button id="FreeGame1" class="FreeGame" onactivate="StoreShowApp(230410);" selectionpos="auto" >
					<Image  class="GridItemImage" src="file://{images}/library_default.tga" defaultsrc="file://{images}/library_default.tga" />
					<Panel class="FreeGameDetails">
						<Label text="XXXXX Current Players" />
					</Panel>
				</Button>
				<Button id="FreeGame2" class="FreeGame" onactivate="StoreShowApp(304050);" selectionpos="auto" >
					<Image  class="GridItemImage" src="file://{images}/library_default.tga" defaultsrc="file://{images}/library_default.tga" />
					<Panel class="FreeGameDetails">
						<Label text="XXXXX Current Players" />
					</Panel>
				</Button>
			</Panel>
		</Panel>
		<Panel class="StoreList AppList" selectionpos="auto">
			<Label class="HeaderLabel" text="#Library_Suggested_BrowseStore" />
			<Panel class="SuggestedRow" selectionpos="auto">
				<Button onactivate="StoreShowGenre(Free To Play);" selectionpos="auto" >
					<Label  text="#Library_Suggested_BrowseStore_Free" />
				</Button>
				<Button onactivate="StoreShow();" selectionpos="auto" >
					<Label  text="#Library_Suggested_BrowseStore_AllGames"  />
				</Button>
			</Panel>
		</Panel>
	</LibrarySuggestions>
</root>
