						<Button id="kb_key_rshift" selectionpos="-2,4" onactivate="SetBinding( key_press, rshift );"><Label text="shift" /></Button>
					</Panel>
					<Panel id="VKBCol2" selectionpos="30,0">
						<Button disabled="true" class="Empty" />
