						<Button id="kb_key_f12" selectionpos="0,0" onactivate="SetBinding( key_press, f12 );"><Label text="F12" /></Button>
						<Button id="kb_key_EMPTY2" disabled="true" class="Empty" />
					</Panel>
					<Panel id="VKBCol2" selectionpos="30,0">
