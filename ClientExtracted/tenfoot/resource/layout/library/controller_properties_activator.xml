					<DropDown id="ActivatorDropDown" />
				</Panel>
				<!-- Full Press -->
				<Panel class="FieldWrapper" activators="fullpress">
					<Label class="FieldLabel" text="#Library_Details_FieldLabel_ActivatorBinding" />
