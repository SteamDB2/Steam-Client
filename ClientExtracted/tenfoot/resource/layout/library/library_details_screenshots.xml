<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/parental/parental.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>

	<LibraryScreenshots defaultfocus="ViewAllScreenshots">
		<ParentalButton id="ScreenshotsFullWrapper" class="ScreenshotsFullWrapper" onactivate="OpenScreenshotManager()" >
			<Label id="HeaderLabel" class="HeaderLabel" text="#Library_Details_Screenshots" html="true" />
			<Panel id="ParentalOverlay">
				<ParentalReplacementPanel id="ParentalLockedReplacementPanel" />
				<Panel id="ScreenshotsBody" class="ScreenshotsBody HideWhileLocked">
					<Panel id="ScreenshotsSmallBody" class="ScreenshotsSmallBody">
						<Panel id="ScreenshotThumbs">
							<Image id="ScreenshotThumb1" class="ScreenshotsSmallThumb" scaling="stretch-to-fit-x-preserve-aspect" horizontalalign="center" verticalalign="center" />
							<Image id="ScreenshotThumb2" class="ScreenshotsSmallThumb" scaling="stretch-to-fit-x-preserve-aspect" horizontalalign="center" verticalalign="center" />
							<Image id="ScreenshotThumb3" class="ScreenshotsSmallThumb" scaling="stretch-to-fit-x-preserve-aspect" horizontalalign="center" verticalalign="center" />
						</Panel>
						<Panel id="HowToWrapper">
							<Panel class="ScreenshotLegendButtons">
								<Image class="MiddleButton" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
								<Label class="Plus" text="+" />
								<KeyboardShortcut class="TriggerButtonBox" id="RT_btn" type="gamepad" />
								<Image class="TriggerButton" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
							</Panel>
							<Label id="ScreenshotHowToLabel1" class="HowToLabel" text="#Library_Details_ScreenshotHowTo1" />
							<Label id="ScreenshotHowToLabel2" class="HowToLabel" text="#Library_Details_ScreenshotHowTo2" />
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</ParentalButton>
	</LibraryScreenshots>
</root>
