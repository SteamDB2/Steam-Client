<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/parental/parental.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>

	<LibraryCommunityHub>
		<ParentalButton id="CommunityHubFullWrapper" class="CommunityHubFullWrapper" onactivate="BrowseCommunityHub();" >
			<Label id="HeaderLabel" class="HeaderLabel" text="#Library_Details_GameHubPage" html="true"/>
			<Panel id="ParentalOverlay">
				<ParentalReplacementPanel id="ParentalLockedReplacementPanel" />
				<Panel id="WorkshopBody" class="WorkshopBody HideWhileLocked">
					<Panel id="WorkshopSmallBody" class="WorkshopSmallBody">
						<Image id="WorkshopThumb1" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb2" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb3" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb4" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb5" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb6" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
						<Image id="WorkshopThumb7" class="WorkshopThumb" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
					</Panel>
					<Panel id="WorkshopLargeBody" class="WorkshopLargeBody">
						<Label id="WorkshopWhatIsItLabel" text="#Library_Details_CommunityHubWhatIsIt" />
						<Panel id="WorkshopImageWrapper">
							<Panel id="WorkshopImageHorWrapper">
								<Image id="WorkshopBigThumb1" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
								<Panel id="WorkshopImageRow1" class="WorkshopImageRow">
									<Image id="WorkshopBigThumb2" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
									<Image id="WorkshopBigThumb3" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
								</Panel>
								<Panel id="WorkshopImageRow2" class="WorkshopImageRow">
									<Image id="WorkshopBigThumb4" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
									<Image id="WorkshopBigThumb5" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
								</Panel>
								<Panel id="WorkshopImageRow3" class="WorkshopImageRow">
									<Image id="WorkshopBigThumb6" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
									<Image id="WorkshopBigThumb7" scaling="stretch-to-fit-y-preserve-aspect" horizontalalign="center" verticalalign="center" />
								</Panel>
							</Panel>
						</Panel>
					</Panel>
				</Panel>
			</Panel>
		</ParentalButton>
	</LibraryCommunityHub>
</root>
