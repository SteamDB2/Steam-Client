<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>
	
	<LibraryController defaultfocus="ControllerLargeBody" >
		<Panel id="ControllerFullWrapper" class="ControllerFullWrapper">
			<Label id="HeaderLabel" class="HeaderLabel" text="#Library_Details_Controller" />
			<Panel id="ControllerBody" class="ControllerBody">
				<Panel id="ControllerSmallBody" class="ControllerSmallBody">
					<Panel id="ControllersRowOne" class="ControllersRow">
						<Panel id="ControllerWrapper1" class="ControllerIcon">
							<Image id="ControllerImage1" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper2" class="ControllerIcon">
							<Image id="ControllerImage2" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper3" class="ControllerIcon">
							<Image id="ControllerImage3" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper4" class="ControllerIcon">
							<Image id="ControllerImage4" class="ControllerIconImage" />
						</Panel>
					</Panel>
					<Panel id="ControllersRowTwo" class="ControllersRow">
						<Panel id="ControllerWrapper5" class="ControllerIcon">
							<Image id="ControllerImage5" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper6" class="ControllerIcon">
							<Image id="ControllerImage6" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper7" class="ControllerIcon">
							<Image id="ControllerImage7" class="ControllerIconImage" />
						</Panel>
						<Panel id="ControllerWrapper8" class="ControllerIcon">
							<Image id="ControllerImage8" class="ControllerIconImage" />
						</Panel>
					</Panel>
				</Panel>
				<Panel id="ControllerLargeBody" class="ControllerLargeBody" childfocusonhover="true" selectionposboundary="vertical">
					<Button id="Controller1" class="ControllerDetail Button" tabindex="1" selectionpos="1,1" onactivate="ViewControllerDetails( 1 );">
						<Image id="ControllerDetailImage1" class="ControllerDetailImage" />
						<Panel id="ControllerLabels1" class="ControllerLabels">
							<Label id="ControllerLabelTitle1" class="ControllerLabelTitle" text="#Library_Details_Controller_Hint" />
							<Label id="ControllerLabelDescription1" class="ControllerLabelDescription" />
						</Panel>
					</Button>
					<Button id="AddController" class="ControllerDetail Button" tabindex="9" selectionpos="1,9" onactivate="AddWirelessController();">
						<Image id="AddControllerDetailImage" class="AddControllerDetailImage" />
						<Panel id="ControllerAddLabels" class="ControllerLabels">
							<Label id="ControllerAddLabelTitle" class="ControllerLabelTitle" text="#Library_Details_Controller_Add" />
							<Label id="ControllerAddLabelDescription" class="ControllerLabelDescription" />
						</Panel>					
					</Button>
					<Button id="TurnOffController" class="ControllerDetail Button" tabindex="10" selectionpos="1,10" onactivate="TurnOffWirelessController();">
						<Image id="TurnOffControllerDetailImage" class="TurnOffControllerDetailImage" />
						<Panel id="ControllerTurnOffLabel" class="ControllerLabels">
							<Label id="ControllerTurnOffLabelTitle" class="ControllerLabelTitle" text="#Quit_TurnOffController" />
							<Label id="ControllerTurnOffLabelDescription" class="ControllerLabelDescription" />
						</Panel>
					</Button>
					</Panel>
			</Panel>
		</Panel>
	</LibraryController>
</root>
