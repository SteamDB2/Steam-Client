<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/library/library.css" />
	</styles>

	<LibraryDLCItem>
		<Button id="WrapperButton" class="Button" mousecanactivate="iffocused" >
			<Panel class="LeftColumn" >
				<Image id="Image"  src="file://{images}/library_default.tga" defaultsrc="file://{images}/library_default.tga" />
				<Panel class="DLCInstallState Installed">
					<Image class="DLCInstallStateIcon" src="file://{images}/library/icon_readytoplay.png" />
				</Panel>
				<Panel class="DLCInstallState NotInstalled">
					<Image class="DLCInstallStateIcon" src="file://{images}/library/icon_readytodownload.png" />
				</Panel>
			</Panel>
			<Panel class="RightColumn" >
				<Label id="DLCInstalled"  text="#Library_DLC_Installed_State" />
				<Label id="DLCTitle"  text="#Library_DLC_Name" />
			</Panel>
		</Button>
	</LibraryDLCItem>	
</root>
