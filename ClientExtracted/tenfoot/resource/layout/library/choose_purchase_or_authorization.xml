<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/msgbox.css" />
		<include src="file://{resources}/styles/library/choose_purchase_or_authorization.css" />
		
	</styles>

	<ChoosePurchaseOrAuthorizationPanel class="TenfootMsgBox" onmouseactivate="CancelDialog();" defaultfocus="ButtonCancel" tabindex="auto" selectionpos="auto">
		<Panel id="MsgBoxBodyRegion" >
			<Panel id="MsgBoxHeader" class="MsgBoxHeader">
				<Label id="MsgBoxTitle" class="StdTitle" text="#DeviceAuth_ChooseDialog_Title" />
			</Panel>
			
			<Panel id="MsgBoxButtonArea" class="MsgBoxButtonArea">
				<Panel id="MsgBoxDescriptionArea" class="MsgBoxDescriptionArea">
					<Label id="MsgBoxContents" class="MsgBoxContents" text="#DeviceAuth_ChooseDialog_Text" />
				</Panel>
				
				<Panel class="MsgBoxButtons" >	
					<Button id="ButtonRequestAuthorization" class="MsgBoxButton Button" onactivate="RequestAuthorization();">
						<Label text="#DeviceAuth_ChooseDialog_Request" />
					</Button>					
					<Button id="ButtonPurchaseGame" class="MsgBoxButton Button" onactivate="PurchaseGame();">
						<Label text="#DeviceAuth_ChooseDialog_Purchase" />
					</Button>
				</Panel>
			

				
			</Panel>
		</Panel>
	</ChoosePurchaseOrAuthorizationPanel>
</root>